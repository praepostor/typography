---
layout: minimizer
---
<?xml version="1.0" encoding="UTF-8"?>
{% capture url %}{{ site.url }}{{ site.baseurl }}{% endcapture %}
<feed xmlns="http://www.w3.org/2005/Atom">
  <id>urn:uuid:{{ site.uuid | uri_escape | xml_escape }}</id>
  <link rel="self"
        type="application/atom+xml"
        href="{{ page.url | prepend: url | uri_escape | xml_escape }}" />
  <title type="html">{{ site.title | xml_escape }}</title>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
{% for post in site.posts %}
  {% assign author = site.data.people[post.author] %}
  {% capture lang %}{{ post.lang | xml_escape }}{% endcapture %}
  <entry>
      <author>
      <email>{{ author.email | uri_escape | xml_escape }}</email>
      <name xml:lang="{{ lang }}">{{ author.name[lang] | xml_escape }}</name>
      <uri>{{ author.site | uri_escape | xml_escape }}</uri>
    </author>
    <id>urn:uuid:{{ post.uuid | uri_escape | xml_escape }}</id>
    <link href="{{ post.url | prepend: url | uri_escape | xml_escape }}"
          hreflang="{{ lang }}" />
    <title type="html"
           xml:lang="{{ lang }}">{{ post.title | xml_escape }}</title>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <content type="html" xml:lang="{{ lang }}">
      {{ post.content | xml_escape }}
    </content>
  </entry>
{% endfor %}
</feed>
