{% capture _years %}

{% assign _creation_year = include.value | plus: 0 %}
{% assign _current_year = site.time | date: '%Y' | plus: 0 %}

{% if _creation_year < _current_year %}
{{ _creation_year }}-{{ _current_year }}
{% else %}
{{ _creation_year }}
{% endif %}

{% assign _creation_year = nil %}
{% assign _current_year = nil %}

{% endcapture %}{{ _years | strip_newlines }}{% assign _years = nil %}